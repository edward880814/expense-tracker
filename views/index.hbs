<div class='container mt-5 text-center'>
  <select name='category' id='category' class='col-6 f4-3 border border-3'>
    <option>類別</option>
    <option value='1'>家居物業</option>
    <option value='2'>交通出行</option>
    <option value='3'>休閒娛樂</option>
    <option value='4'>餐飲食品</option>
    <option value='5'>其他</option>
  </select>
  <div class='d-flex justify-content-center'>
    <div class='d-flex align-items-center justify-content-around mt-3 mb-3 col-8'>
      <div class='p-2 fs-4' id='totalAmountLabel'>Total：</div>
      <div class='p-2 fs-1 fw-bold' id='totalAmount'>{{totalAmount}}</div>
    </div>
  </div>
  

{{#each records}}
<div class="row text-start fs-4 mb-2 d-flex align-items-center" style="border: none;">
  <div class="col-2 text-end" style="border: none;">
    {{{this.categoryIcon}}}
  </div>
  <div class="col-6 d-flex align-items-center" style="border: none;">
    <div class="name flex-grow-1 d-flex flex-column">
      <div class="fs-3">{{this.name}}</div>
      <div class="fs-6" id="date">{{this.date}}</div>
    </div>
    <div class="price fs-2 fw-bold" style="border: none;">{{this.amount}}</div>
  </div>
  <div class="col text-center" style="border: none;">
    <a href="/records/{{this._id}}/edit" class="btn btn-success">Edit</a>
  </div>
  <div class="col text-center" style="border: none;">
        <button type="button" class="btn btn-danger deleBtn" data-bs-toggle="modal" data-bs-target="#deleConfirm"
          data-id="{{this._id}}" data-name="{{this.name}}" data-amount="{{this.amount}}" data-date="{{this.date}}">
          刪除
        </button>
  </div>
</div>
    {{/each}}
    <a href="/records/create" class="btn btn-create m-3"
      style="border: 1px solid black; background-color: rgb(255, 123, 0); color: white;">新增支出</a>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="deleConfirm" tabindex="-1" aria-labelledby="deleConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="deleConfirmLabel">確認刪除該筆紀錄？</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
          <button type="button" class="btn btn-danger">刪除</button>
        </div>
      </div>
    </div>
</div>
